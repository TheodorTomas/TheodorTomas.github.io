{
  "name": "theodortomas-dot-com",
  "description": "theodortomas.com - Theodór Tómas | Software Engineer",
  "author": {
    "name": "Theodór Tómas Theodórsson",
    "email": "theodortomas@gmail.com"
  },
  "version": "2.0.0",
  "license": "MIT",
  "scripts": {
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "precommit": "lint-staged",
    "prettify": "prettier --write -l info \"**/*.{md,css,scss,yaml,yml,ts,js}\"",
    "start": "react-scripts start",
    "start:build": "NODE_ENV=development webpack --config node_modules/react-scripts/config/webpack.config.dev.js --output-path build --watch",
    "start:server:dev": "NODE_ENV=development nodemon server/bootstrap.js",
    "start:server:prod": "NODE_ENV=production node server/bootstrap.js",
    "test": "run-s test:lint:** test:unit",
    "test:lint": "run-s test:lint:**",
    "test:lint:js": "eslint --ext=js --ext=jsx --ignore-path .gitignore .",
    "test:lint:css": "stylelint --config=.stylelintrc './src/**/*.js'",
    "test:unit": "react-scripts test --env=jsdom --coverage",
    "test:watch": "react-scripts test --env=jsdom --coverage --watch"
  },
  "resolutions": {
    "babel-core": "7.0.0-bridge.0"
  },
  "dependencies": {
    "cookieconsent": "^3.0.6",
    "prop-types": "^15.7.2",
    "react": "^16.8.5",
    "react-dom": "^16.8.5",
    "react-ga": "^2.4.1",
    "react-scripts": "2.1.8",
    "sanitize.css": "^8.0.0",
    "styled-components": "^4.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.4.0",
    "babel-core": "7.0.0-bridge.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.4.0",
    "express": "^4.16.3",
    "fs": "^0.0.1-security",
    "husky": "^1.2.0",
    "ignore-styles": "^5.0.1",
    "jest-styled-components": "^6.3.1",
    "lint-staged": "^8.1.0",
    "md5-file": "^4.0.0",
    "morgan": "^1.9.0",
    "nodemon": "^1.17.5",
    "npm-run-all": "^4.1.2",
    "path": "^0.12.7",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "react-test-renderer": "^16.8.2",
    "stylelint": "^9.9.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.5.1"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json}": [
      "eslint --fix",
      "git add"
    ],
    "src/**/*.{js}": [
      "stylelint --config=.stylelintrc --fix",
      "git add"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js}",
      "!src/**/*.test.{js,jsx}",
      "!src/index.js",
      "!src/setupTests.js",
      "!src/global-styles.js",
      "!src/serviceWorker.js",
      "!src/*/*/trackerId.js"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 95,
        "branches": 95,
        "functions": 95,
        "lines": 95
      }
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
